    <record model="ir.ui.view" id="view_course_tree">
        <field name="name">Courses</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title"/>
                <field name="desc"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_course_form">
        <field name="name">Courses</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="title" class="oe_edit_only"/>
                        <h1>
                            <field name="title" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="resp_id"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Information">
                            <separator string="Description"/>
                            <field name="desc" readonly="1"/>
                        </page>
                        <page string="Sessions">
                            <field name="session_ids" context="{'default_course_id': active_id}">
                                <tree>
                                    <field name="name"/>
                                    <field name="instructor_id"/>
                                    <field name="start_date"/>
                                    <field name="duration"/>
                                    <field name="number_of_seat"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="name"/>
                                            <field name="number_of_seat"/>
                                            <field name="instructor_id"/>
                                            <field name="course_id" invisible="1"/>
                                        </group>
                                        <group>
                                            <field name="start_date"/>
                                            <field name="duration"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
  </data>
</openerp>