<openerp>
  <data>
    <record model="ir.actions.act_window" id="action_course">
        <field name="name">Course</field>
        <field name="res_model">academy.course</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_academy_top"
        name="Academy"
        sequence="99"/>

    <menuitem
        id="menu_academy"
        name="Academy"
        parent="menu_academy_top"/>

    <menuitem
        id="menu_course"
        name="Course"
        parent="menu_academy"
        action="action_course"/>
